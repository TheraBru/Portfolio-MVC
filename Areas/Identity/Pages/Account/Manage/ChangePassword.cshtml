@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Byta lösenord";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div>
    <div>
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="errorMsg"></div>
            <div>
                <label asp-for="Input.OldPassword" ></label>
                <input asp-for="Input.OldPassword" autocomplete="current-password" aria-required="true" />
                <span asp-validation-for="Input.OldPassword" class="errorMsg"></span>
            </div>
            <div>
                <label asp-for="Input.NewPassword" ></label>
                <input asp-for="Input.NewPassword" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.NewPassword" class="errorMsg"></span>
            </div>
            <div>
                <label asp-for="Input.ConfirmPassword" ></label>
                <input asp-for="Input.ConfirmPassword"  autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.ConfirmPassword" class="errorMsg"></span>
            </div>
            <input type="submit" value="Uppdatera lösenord">
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
