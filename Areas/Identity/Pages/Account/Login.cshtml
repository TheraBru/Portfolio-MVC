@page
@model LoginModel

@{
    ViewData["Title"] = "Logga in";
}

<h1>@ViewData["Title"]</h1>
<div>
    <div>
        <section>
            <form id="account" method="post">
                <h2>Logga in på ditt lokala konto.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="errorMsg"></div>
                <div>
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="errorMsg"></span>
                </div>
                <div>
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="errorMsg"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input class="formCheck" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <input id="login-submit" type="submit" value="Logga in">
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Glömt ditt lösenord?</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
