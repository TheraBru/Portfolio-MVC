@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrera";
}

<h1>@ViewData["Title"]</h1>

<div class="accountDiv">
    <div>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Skapa ett nytt konto</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="errorMsg"></div>
            <div>
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.Email" class="errorMsg"></span>
            </div>
            <div>
                 <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.Password" class="errorMsg"></span>
            </div>
            <div>
                 <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword"  autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.ConfirmPassword" class="errorMsg"></span>
            </div>
            <input id="registerSubmit" type="submit" value="Registrera">
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
